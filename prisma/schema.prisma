generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Assignment {
  id          Int      @id @default(autoincrement())
  name        String
  details     String
  courseId    String
  courseName  String
  dueDate     String
  completed   Boolean
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}